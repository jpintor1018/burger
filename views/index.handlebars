<div class="jumbotron jumbotron-fluid">
    <div class="container1">
        <div>
            <img src="https://www.brandcrowd.com/gallery/brands/pictures/picture14881452908165.png">
            <h1>Eat-Da-Burger</h1>
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <form class="create-form">
                    <span class="form-group">
                        <label>Place Order Here:</label>
                        <input type="text" id="ca" name="name">
                    </span>
                        <button type="submit">Nice Buns</button>
                </form>
            </div>
        </div>
        </div>
    </div>
</div>



<div class="container2">
<div class="row">
    <div class="col-md-6 ">
        <h1>Ready To Eat!</h1>
        <ul>
        {{#each burgers}}
            {{#unless devoured}}
            {{>burger/burger-block devoured=false}}
            {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div class="col-md-6 ">
        <h1>Devoured Burgers</h1>
        {{#each burgers}}
            {{#if devoured}}
               {{>burger/burger-block devoured=true}}
            {{/if}}
        {{/each}}
    
    </div>
</div>


