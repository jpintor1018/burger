<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <div>
            <img src="https://www.brandcrowd.com/gallery/brands/pictures/picture14881452908165.png">
            <h1>Create-Da-Burger</h1>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6 ">
        <h1>Ready To Eat!</h1>
        <ul>
        {{!-- {{#each burgers}}
            {{#unless devoured}}
                {{> burgers/burger-block}}
            {{/unless}}
        {{/each}}    --}}
        </ul>
             

    </div>

    <div class="col-md-6 ">
        <h1>Devoured Burgers</h1>
        {{#each burgers}}
            {{#if devoured}}
                <div>{{id}}.{{burger_name}}</div>
            {{/if}}
        {{/each}}
    </div>
</div>
<div class="row">
    <div class="col-md-6 offset-md-3">
<form class="create-form">

  <span class="form-group">
   
    <input type="text" id="newBurger" name="name">
  </span>

  <button type="submit">Nice Buns</button>
</form>
    </div>
</div>


